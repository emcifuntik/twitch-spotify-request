{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2020",
    "rootDirs": [
      "./src"
    ],
    "outDir": "./dist",
    "newLine": "LF",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*.ts"
  ]
}
